{
	"compilerOptions": {
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"maxNodeModuleJsDepth": 0,
		"module": "CommonJS",
		"noEmit": true,
		"noImplicitOverride": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ES2022",
		"useUnknownInCatchVariables": true
	},
	"exclude": ["coverage", "node_modules", "test"],
	"include": ["**/*.js", "**/*.ts"]
}
